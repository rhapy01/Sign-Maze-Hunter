# Sign Vanguard Environment Variables
# Copy this file to .env and replace with your actual values

# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/sign_vanguard
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/sign_vanguard
MONGODB_URI=mongodb://localhost:27017/sign_vanguard

# Environment (development, production)
NODE_ENV=development

# Optional: Server port (defaults to 3000)
PORT=3000

# For production deployment on Render:
# 1. Set MONGODB_URI to your MongoDB Atlas connection string
# 2. Set NODE_ENV to production
# 3. PORT will be automatically set by Render 